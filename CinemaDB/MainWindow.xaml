                    <SkewTransform/>
                    <RotateTransform Angle="71.979"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock Foreground="Black" TextAlignment="Left">
                        <Run Text="Админ акк - Логин: LolliDi Пароль: Lolli-345"/>
                        <LineBreak/>
                        <Run Text="Изменил размер, вроде всё подогнал под новый"/>
                        <LineBreak/>
