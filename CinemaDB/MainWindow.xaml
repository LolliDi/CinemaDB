<Window x:Class="CinemaDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

Title="MainWindow" 
        Height="600" 
        Width="850" 
        ResizeMode="NoResize" 
        WindowStyle="None" 
        Background="Transparent" 
        AllowsTransparency="True" 
        Icon="Images/logo.png"
        MouseLeftButtonDown="WindowMouseLeftButtonDown">
    <Grid Margin="10,10,0,0">
        <Path Stroke="#0B1538" StrokeThickness="2" SnapsToDevicePixels="True" Margin="0,4,0,-4" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="#3e5769"/>
            </Path.Fill>
            <Path.Data>
                <PathGeometry FillRule="Nonzero">
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="80,190" IsClosed="True">
                            <LineSegment Point="560,190"/>
                            <LineSegment Point="560,250"/>
                            <LineSegment Point="600,250"/>
                            <LineSegment Point="640,220"/>
                            <LineSegment Point="640,370"/>
                            <LineSegment Point="600,340"/>
                            <LineSegment Point="560,340"/>
                            <LineSegment Point="560,450"/>
                            <LineSegment Point="80,450"/>
                            <LineSegment Point="80,290"/>
                            <LineSegment Point="65,290"/>
                            <LineSegment Point="45,301"/>
                            <LineSegment Point="35,303"/>
                            <LineSegment Point="10,230"/>
                            <LineSegment Point="25,230"/>
                            <LineSegment Point="65,250"/>
                            <LineSegment Point="80,250"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <Path SnapsToDevicePixels="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="Black"/>
            </Path.Fill>
            <Path.Data>
                <PathGeometry FillRule="Nonzero">
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="247,170" IsClosed="True">
                            <LineSegment Point="275,150"/>
                            <LineSegment Point="282,80"/>
                            <LineSegment Point="230,120"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <Path Stroke="Black" StrokeThickness="5" SnapsToDevicePixels="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="#3e5769"/>
            </Path.Fill>
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="150,170" RadiusX="100" RadiusY="100"/>
                    <EllipseGeometry Center="400,130" RadiusX="130" RadiusY="130"/>
                    <EllipseGeometry Center="350,100" RadiusX="10" RadiusY="10"/>
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <Path  SnapsToDevicePixels="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="#f2e8c9"/>
            </Path.Fill>
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="150,170" RadiusX="60" RadiusY="60"/>
                    <EllipseGeometry Center="400,130" RadiusX="90" RadiusY="90"/>
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <Path Stroke="DarkGray" StrokeThickness="1" SnapsToDevicePixels="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="Black"/>
            </Path.Fill>
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="350,95" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="400,70" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="450,95" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="350,155" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="400,180" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="450,155" RadiusX="10" RadiusY="10"/>

                    <EllipseGeometry Center="150,140" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="150,200" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="120,170" RadiusX="10" RadiusY="10"/>
                    <EllipseGeometry Center="180,170" RadiusX="10" RadiusY="10"/>
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>

        </Path>

        <Path Stroke="DarkGray" StrokeThickness="1" SnapsToDevicePixels="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="#f9b84d"/>
            </Path.Fill>
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="520,210" RadiusX="10" RadiusY="10"/>
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <Path Stroke="DarkGray" StrokeThickness="1" SnapsToDevicePixels="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="#ff7058"/>
            </Path.Fill>
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="545,210" RadiusX="10" RadiusY="10"/>
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <Path SnapsToDevicePixels="True" Grid.RowSpan="2" Margin="-3,2.5,3,-2.5" Grid.ColumnSpan="2">
            <Path.Fill>
                <SolidColorBrush Color="DarkGray"/>
            </Path.Fill>
            <Path.Data>
                <GeometryGroup>
                    <RectangleGeometry Rect="405,380 140,65" RadiusX="5" RadiusY="5" />
                </GeometryGroup>
            </Path.Data>
            <Path.RenderTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3"></ScaleTransform>
            </Path.RenderTransform>
        </Path>

        <TextBlock Panel.ZIndex="100" Text="(?) Инфо (?)" Width="115" Margin="-22,332,747,215" Foreground="Black" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="70.549"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                        <Run Text="Не стал блокировать при входе кнопки,"/>
                        <LineBreak/>
                        <Run Text="чтобы было удобнее тестировать"/>

                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
            </TextBlock>

        <TextBlock Text="Кинотеатр" FontSize="70" Margin="279,-33,69,496">
            <TextBlock.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="5"/>
            </TextBlock.Effect>
        </TextBlock>
        <Image Source="Images\logo.png"  Margin="481,122,279,390"/>
        <Button Name="BtnVhod" Click="VhodClick" Height="24" Width="70" Margin="733,344,37,222" Template="{StaticResource but}">
            <TextBlock Foreground="Black" FontSize="15" Margin="0">Вход</TextBlock>
        </Button>
        <Button Name="BtnReg" Margin="715,375,20,191" Width="105" Height="24" Template="{StaticResource but}" Click="RegistrClick">
            <TextBlock Foreground="Black" FontSize="15" Margin="0">Регистрация</TextBlock>
        </Button>
        <TextBlock FontSize="17" Width="130" Margin="542,496,158,0"><Run>Перемещение</Run><LineBreak/><Run>по окнам</Run></TextBlock>
        <Button Name="BNaz" Click="nazClick" Height="24" Width="40" Margin="530,550,270,16" Template="{StaticResource but}" Panel.ZIndex="150">
            <TextBlock Foreground="Black" FontSize="25" Margin="0,-9"> &lt;&lt;</TextBlock>
        </Button>
        <Button Name="BVper" Click="vperClick" Height="24" Width="40" Margin="658,550,142,16" FontSize="20" Template="{StaticResource but}" Panel.ZIndex="150">
            <TextBlock Foreground="Black" FontSize="25" Margin="0,-8,0,-10"> &gt;&gt;</TextBlock>
        </Button>
        <Button Width="27" Background="#ff7058" Template="{StaticResource buclose}" Margin="695,259,118,303" Click="CloseClick">
            <TextBlock FontWeight="Bold" FontSize="20" Foreground="Black" Margin="0,-4,0,-8">x</TextBlock>
        </Button>
        <Button Width="27" Background="#f9b84d" Template="{StaticResource buclose}" Margin="662,259,151,303" Click="HideClick" Panel.ZIndex="150">
            <TextBlock FontWeight="Bold" FontSize="35" Foreground="Black" Margin="0,-17,0,-8">-</TextBlock>
        </Button>
        <Button Name="BtnVihod" Click="VihodClick" Height="24" Width="70" Margin="733,406,37,160" Template="{StaticResource but}" IsEnabled="False">
            <TextBlock Foreground="Black" FontSize="15" Margin="0">Выход</TextBlock>
        </Button>
        <Frame Name="FrameStr" NavigationUIVisibility="Hidden" Margin="108,356,118,0">
        </Frame>
    </Grid>
</Window>
